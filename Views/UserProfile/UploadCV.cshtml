@model UserCVuploader.Models.UploadCVViewModel

@{ ViewData["Title"] = "Upload CV"; }

<h2>Upload CV</h2>
<form asp-action="UploadCV" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="CV" class="control-label"></label>
        <input asp-for="CV" class="form-control" />
        <span asp-validation-for="CV" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Upload</button>
    </div>
</form>
